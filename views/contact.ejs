  <style>
    .page-hero { 
      background: linear-gradient(135deg, rgba(14, 165, 233, 0.9), rgba(2, 132, 199, 0.8)); 
      color: var(--text-inverse); 
      padding: var(--space-20) 0; 
      border-bottom: 1px solid var(--border-light); 
    }
    .page-hero h1 {
      font-family: 'Poppins', sans-serif;
      font-size: var(--text-5xl);
      font-weight: var(--font-black);
      margin-bottom: var(--space-4);
    }
    .contact { padding: var(--space-16) 0; background: var(--bg-primary); }

    .form-group { margin-bottom: var(--space-6); }
    label { 
      display: block;
      font-weight: var(--font-semibold);
      margin-bottom: var(--space-2);
      color: var(--text-primary);
    }
    input, textarea { 
      width: 100%;
      padding: var(--space-4);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      background: var(--bg-secondary);
      color: var(--text-primary);
      font-family: inherit;
      transition: all var(--transition-fast);
    }
    input:focus, textarea:focus {
      outline: none;
      border-color: var(--primary-300);
      box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
      background: var(--bg-primary);
    }
    textarea { min-height: 140px; resize: vertical; }
    .alert { 
      padding: var(--space-4); 
      border-radius: var(--radius-lg); 
      margin-bottom: var(--space-4);
      font-weight: var(--font-medium);
    }
    .alert-danger {
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.3);
      color: var(--error-600);
    }
    .alert-success {
      background: rgba(34, 197, 94, 0.1);
      border: 1px solid rgba(34, 197, 94, 0.3);
      color: var(--success-600);
    }

    /* Cards grid */
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-6);
      max-width: 1100px;
      margin: 0 auto;
    }
    @media (max-width: 1100px) {
      .cards-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @media (max-width: 640px) {
      .cards-grid { grid-template-columns: 1fr; }
    }

    /* Flip card */
    .flip-card {
      perspective: 1000px;
      cursor: default;
    }
    .flip-card-inner {
      position: relative;
      width: 100%;
      height: 280px;
      transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      transform-style: preserve-3d;
      border: 1px solid var(--border-light);
      border-radius: var(--radius-2xl);
      box-shadow: var(--shadow-sm);
      overflow: hidden;
      background: var(--bg-primary);
    }
    /* Flip disabled */
    .flip-card.flipped .flip-card-inner { transform: none; }
    .flip-card-front, .flip-card-back {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: var(--space-6);
      text-align: center;
    }
    .flip-card-front {
      background: linear-gradient(180deg, var(--bg-primary), var(--bg-secondary));
    }
    .flip-card-front h3 {
      margin: 0;
      color: var(--text-primary);
      font-size: var(--text-2xl);
      font-weight: var(--font-bold);
    }
    .contact-icon {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      display: grid;
      place-items: center;
      margin-bottom: var(--space-4);
      background: var(--bg-secondary);
      border: 1px solid var(--border-light);
      color: var(--primary-400);
      box-shadow: var(--shadow-xs);
    }
    .contact-icon i {
      width: 24px;
      height: 24px;
    }
    .flip-card-back { display: none; }
    .flip-card-back h4 {
      margin: 0 0 var(--space-2) 0;
      color: var(--text-primary);
    }
    .flip-card-back p, .flip-card-back a {
      color: var(--text-primary);
      margin: 0;
    }
    .flip-field {
      display: flex;
      gap: var(--space-2);
      align-items: center;
      line-height: 1.4;
    }
    .flip-label {
      font-weight: var(--font-semibold);
      color: var(--text-secondary);
      min-width: 56px;
    }
    @media (max-width: 640px) {
      .flip-card-inner { height: 240px; }
      .contact-icon { width: 52px; height: 52px; }
    }
  </style>
</head>
