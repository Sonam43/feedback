<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>College Management & Redressal System - Professional Platform</title>
  <meta name="description" content="Transform your college management with our professional-grade platform. Streamline academics, handle grievances, and enhance student experience.">
  <meta name="keywords" content="college management, student portal, grievance redressal, academic management">
  
  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <!-- Modern Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lucide@latest/dist/umd/lucide.js">
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="css/style.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/css/images/logo.jpg">
</head>
<body>

  <!-- Modern Navbar -->
  <nav class="navbar" id="navbar">
    <div class="container nav-container">
      <a href="/" class="logo">
        <img src="/css/images/logo.jpg" alt="College FMS Logo">
        <span>College FMS</span>
      </a>
      <ul class="nav-links">
        <% if (currentUser) { %>
          <li><a href="/logout" class="btn btn-sm btn-ghost">Logout</a></li>
        <% } else { %>
          <li><a href="/login" class="btn btn-primary">Login</a></li>
          <li><a href="/signup" class="btn btn-secondary">Sign Up</a></li>
        <% } %>
      </ul>
    </div>
  </nav>

  <!-- Modern Hero Section -->
  <section class="hero">
    <div class="container hero-container">
      <div class="hero-text">
        <h1>Transform Your College Management Experience</h1>
        <p>Streamline academic operations, enhance student engagement, and resolve grievances efficiently with our professional-grade platform designed for modern educational institutions.</p>
        <div class="cta-group">
          <a href="/login" class="btn btn-primary btn-lg">
            <i data-lucide="log-in"></i>
            Login
          </a>
          <a href="/signup" class="btn btn-secondary btn-lg">
            <i data-lucide="user-plus"></i>
            Create Account
          </a>
        </div>
      </div>
      <div class="hero-image">
        <div class="hero-visual">
          <div class="floating-card card-1">
            <i data-lucide="graduation-cap"></i>
            <span>Academic Excellence</span>
          </div>
          <div class="floating-card card-2">
            <i data-lucide="users"></i>
            <span>Student Management</span>
          </div>
          <div class="floating-card card-3">
            <i data-lucide="shield-check"></i>
            <span>Secure Platform</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Modern Features Section -->
  <section class="features" id="features">
    <div class="container">
      <h2 class="section-title">Powerful Features for Modern Education</h2>
      <div class="feature-cards">
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="graduation-cap"></i>
          </div>
          <h3>Academic Management</h3>
          <p>Streamline course management, grade tracking, and academic records with our comprehensive academic management system.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="message-square-text"></i>
          </div>
          <h3>Grievance Redressal</h3>
          <p>Submit, track, and resolve complaints transparently with our advanced grievance management and tracking system.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="users"></i>
          </div>
          <h3>Student Portal</h3>
          <p>Empower students with self-service capabilities, profile management, and real-time access to academic information.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="bar-chart-3"></i>
          </div>
          <h3>Analytics & Reports</h3>
          <p>Gain insights with comprehensive analytics, performance metrics, and detailed reporting capabilities.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="shield-check"></i>
          </div>
          <h3>Security & Privacy</h3>
          <p>Enterprise-grade security with data encryption, role-based access control, and privacy protection.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
        <div class="feature-card">
          <div class="feature-card-icon">
            <i data-lucide="headphones"></i>
          </div>
          <h3>24/7 Support</h3>
          <p>Round-the-clock technical support, comprehensive documentation, and dedicated customer success team.</p>
          <a href="/login" class="feature-card-link">Login to use</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Modern Footer -->
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <img src="/css/images/logo.jpg" alt="College CMS Logo">
            <span>College CMS</span>
          </a>
          <p class="footer-description">
            Empowering educational institutions with modern technology solutions for seamless academic management and student success.
          </p>
          <div class="footer-social">
            <a href="#" class="social-link" aria-label="Facebook">
              <i data-lucide="facebook"></i>
            </a>
            <a href="#" class="social-link" aria-label="Twitter">
              <i data-lucide="twitter"></i>
            </a>
            <a href="#" class="social-link" aria-label="LinkedIn">
              <i data-lucide="linkedin"></i>
            </a>
            <a href="#" class="social-link" aria-label="Instagram">
              <i data-lucide="instagram"></i>
            </a>
          </div>
        </div>
        
        <!-- Removed landing links per request -->
        
        <div class="footer-section">
          <h4>Legal</h4>
          <ul class="footer-links">
            <li><a href="/login">Privacy Policy</a></li>
            <li><a href="/login">Terms of Service</a></li>
            <li><a href="/login">Security</a></li>
            <li><a href="/login">Compliance</a></li>
          </ul>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2025 College Facilities & Management System. All rights reserved. Built for education.</p>
      </div>
    </div>
  </footer>

  <!-- JavaScript for enhanced interactions -->
  <script>
    // Initialize Lucide icons
    lucide.createIcons();
    
    // Navbar scroll effect
    window.addEventListener('scroll', () => {
      const navbar = document.getElementById('navbar');
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Add loading states to buttons
    document.querySelectorAll('.btn').forEach(btn => {
      btn.addEventListener('click', function() {
        if (this.href && !this.href.includes('#')) {
          this.classList.add('loading');
        }
      });
    });
    
    // Feature modal functionality
    function showFeatureModal(featureType) {
      const featureData = {
        academic: {
          title: 'Academic Management',
          description: 'Our comprehensive academic management system provides everything you need to streamline educational operations.',
          features: [
            'Course scheduling and management',
            'Grade tracking and reporting',
            'Student enrollment management',
            'Academic calendar integration',
            'Faculty assignment tracking'
          ],
          icon: 'graduation-cap'
        },
        grievance: {
          title: 'Grievance Redressal',
          description: 'Transparent and efficient complaint management system for better student satisfaction.',
          features: [
            'Easy complaint submission',
            'Real-time status tracking',
            'Automated notifications',
            'Priority-based resolution',
            'Complete audit trail'
          ],
          icon: 'message-square-text'
        },
        student: {
          title: 'Student Portal',
          description: 'Empower students with self-service capabilities and real-time access to information.',
          features: [
            'Personal dashboard',
            'Grade and attendance tracking',
            'Course material access',
            'Event and notification center',
            'Profile management'
          ],
          icon: 'users'
        },
        analytics: {
          title: 'Analytics & Reports',
          description: 'Data-driven insights to improve educational outcomes and institutional performance.',
          features: [
            'Performance analytics',
            'Custom report generation',
            'Trend analysis',
            'Predictive insights',
            'Export capabilities'
          ],
          icon: 'bar-chart-3'
        },
        security: {
          title: 'Security & Privacy',
          description: 'Enterprise-grade security measures to protect sensitive educational data.',
          features: [
            'Data encryption',
            'Role-based access control',
            'Audit logging',
            'Privacy compliance',
            'Secure authentication'
          ],
          icon: 'shield-check'
        },
        support: {
          title: '24/7 Support',
          description: 'Comprehensive support system to ensure smooth operation of your educational platform.',
          features: [
            'Round-the-clock assistance',
            'Technical documentation',
            'Video tutorials',
            'Community forums',
            'Priority support channels'
          ],
          icon: 'headphones'
        }
      };
      
      const feature = featureData[featureType];
      if (!feature) return;
      
      // Create modal HTML
      const modalHTML = `
        <div class="feature-modal-overlay" onclick="closeFeatureModal()">
          <div class="feature-modal" onclick="event.stopPropagation()">
            <div class="feature-modal-header">
              <div class="feature-modal-icon">
                <i data-lucide="${feature.icon}"></i>
              </div>
              <h3>${feature.title}</h3>
              <button class="feature-modal-close" onclick="closeFeatureModal()">
                <i data-lucide="x"></i>
              </button>
            </div>
            <div class="feature-modal-body">
              <p class="feature-modal-description">${feature.description}</p>
              <div class="feature-modal-features">
                <h4>Key Features:</h4>
                <ul>
                  ${feature.features.map(f => `<li>${f}</li>`).join('')}
                </ul>
              </div>
            </div>
            <div class="feature-modal-footer">
              <button class="btn btn-primary" onclick="closeFeatureModal()">Got it!</button>
            </div>
          </div>
        </div>
      `;
      
      // Add modal to page
      document.body.insertAdjacentHTML('beforeend', modalHTML);
      
      // Initialize icons
      lucide.createIcons();
      
      // Add animation
      setTimeout(() => {
        document.querySelector('.feature-modal-overlay').classList.add('active');
      }, 10);
    }
    
    function closeFeatureModal() {
      const modal = document.querySelector('.feature-modal-overlay');
      if (modal) {
        modal.classList.remove('active');
        setTimeout(() => {
          modal.remove();
        }, 300);
      }
    }
  </script>
