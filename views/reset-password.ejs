<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - College CMS</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/auth.css">
  <link rel="icon" type="image/x-icon" href="/css/images/logo.jpg">
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <meta name="robots" content="noindex">
  <style>
    .auth-box { max-width: 480px; }
  </style>
  </head>
<body class="auth-body">
  <div class="auth-container">
    <div class="auth-box">
      <div class="auth-header">
        <div class="auth-logo">
          <img src="/css/images/logo.jpg" alt="College CMS Logo">
          <span class="auth-logo-text">College CMS</span>
        </div>
        <h2 class="auth-title">Reset Password</h2>
        <p class="auth-subtitle">Set a new password for your account</p>
      </div>

      <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success">
          <i data-lucide="check-circle"></i>
          <%= message %>
        </div>
      <% } %>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
          <i data-lucide="alert-circle"></i>
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/reset-password" class="auth-form">
        <input type="hidden" name="token" value="<%= token || '' %>">
        <div class="form-group">
          <label for="password" class="form-label">
            <i data-lucide="lock"></i>
            New Password
          </label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter new password" required autocomplete="new-password">
        </div>
        <div class="form-group">
          <label for="confirmPassword" class="form-label">
            <i data-lucide="lock"></i>
            Confirm Password
          </label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required autocomplete="new-password">
        </div>
        <button type="submit" class="auth-btn">
          <i data-lucide="check"></i>
          Reset Password
        </button>
      </form>

      <div class="auth-footer">
        <p>
          <a href="/login" class="auth-link">Back to Sign In</a>
        </p>
      </div>
    </div>
  </div>

  <script>
    lucide.createIcons();
    document.querySelector('.auth-form').addEventListener('submit', function() {
      const submitBtn = this.querySelector('.auth-btn');
      submitBtn.classList.add('loading');
      submitBtn.disabled = true;
    });
  </script>
</body>
</html>


